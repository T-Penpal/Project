package com.mysite.report1;

import javax.servlet.http.HttpSession;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import lombok.extern.slf4j.Slf4j;

@Controller
@RequestMapping("/auth")
@Slf4j
public class LoginController {

    @GetMapping("/login")
    public String loginForm(LoginInput loginInput) {
        log.debug(":) 회원정보 이메일 = " + loginInput.getEmail());
        log.debug(":) 회원정보 비밀번호 = " + loginInput.getPassword());
        return "loginForm";
    }
    
    @PostMapping("/login")
    public String login(LoginInput loginInput, 
            HttpSession session) {
        UserInfo userInfo = new UserInfo
                (1, loginInput.getEmail(), "alex");
        
        session.setAttribute("userInfo", userInfo);
        System.out.println("세션추가:" + userInfo);
        
        return "loginSuccess";
    }
}
