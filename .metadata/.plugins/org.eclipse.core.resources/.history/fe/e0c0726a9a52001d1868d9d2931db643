package com.penpal.project.member;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import org.springframework.security.core.GrantedAuthority;
import org.springframework.stereotype.Service;

import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@Service
public class MemberSecurityService {

    private final MemberRepository memberRepository;
    
    @Override
    public MemberDetails loadMemberByUserId(String userId) 
            throws UserIdNotFoundException { 
        Optional<Member> _member = this.memberRepository.findByUserId(userId));
        if(_member.isEmpty()) {
            throw new UserIdNotFoundException("사용자를 찾을 수 없습니다.");
            }
        }
    Member member = _member.get();
    List<GrantedAuthority> authorities = new ArrayList<>();
    return new User(
            siteUser.getUsername(), 
            siteUser.getPassword(), 
            authorities);
    }
